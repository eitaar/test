<script>
  import { gsap } from 'gsap';
  
  function initWorksAnimations() {
    // Set initial states
    gsap.set('.page-title', { opacity: 0, y: 60 });
    gsap.set('.page-subtitle', { opacity: 0, y: 40 });
    gsap.set('.project-card', { opacity: 0, y: 80, scale: 0.9 });
    gsap.set('.cta-title', { opacity: 0, y: 40 });
    gsap.set('.cta-subtitle', { opacity: 0, y: 30 });
    gsap.set('.cta-button', { opacity: 0, y: 20 });
    
    // Animate page header
    const headerTl = gsap.timeline({ delay: 0.3 });
    headerTl
      .to('.page-title', {
        duration: 1,
        opacity: 1,
        y: 0,
        ease: 'power3.out'
      })
      .to('.page-subtitle', {
        duration: 0.8,
        opacity: 1,
        y: 0,
        ease: 'power3.out'
      }, '-=0.6');
    
    // Animate project cards with stagger
    gsap.to('.project-card', {
      scrollTrigger: {
        trigger: '.project-card',
        start: 'top 85%',
        end: 'bottom 15%',
        toggleActions: 'play none none reverse'
      },
      duration: 0.8,
      opacity: 1,
      y: 0,
      scale: 1,
      stagger: 0.15,
      ease: 'power3.out'
    });
    
    // Animate CTA section
    gsap.to(['.cta-title', '.cta-subtitle', '.cta-button'], {
      scrollTrigger: {
        trigger: '.cta-title',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      },
      duration: 0.6,
      opacity: 1,
      y: 0,
      stagger: 0.1,
      ease: 'power3.out'
    });
    
    // Add hover animations for project cards
    const projectCards = document.querySelectorAll('.project-card');
    
    projectCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        gsap.to(card, {
          duration: 0.3,
          y: -10,
          scale: 1.02,
          ease: 'power2.out'
        });
      });
      
      card.addEventListener('mouseleave', () => {
        gsap.to(card, {
          duration: 0.3,
          y: 0,
          scale: 1,
          ease: 'power2.out'
        });
      });
    });
  }
  
  // Load ScrollTrigger and initialize
  import('gsap/ScrollTrigger').then((ScrollTrigger) => {
    gsap.registerPlugin(ScrollTrigger.ScrollTrigger);
    initWorksAnimations();
  });
  
  // Re-initialize after page transitions
  document.addEventListener('astro:after-swap', () => {
    import('gsap/ScrollTrigger').then((ScrollTrigger) => {
      gsap.registerPlugin(ScrollTrigger.ScrollTrigger);
      initWorksAnimations();
    });
  });
</script>
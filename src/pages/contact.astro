---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Portfolio - Contact" description="お問い合わせ・コンタクト情報">
  <!-- Page Header -->
  <section class="pt-32 pb-16 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="page-title font-Orbitron font-black text-5xl md:text-7xl mb-6 opacity-0 translate-y-8">
        <span class="glow-text">Contact</span>
      </h1>
      <p class="page-subtitle text-xl text-white/80 font-Inter max-w-2xl mx-auto opacity-0 translate-y-8">
        Let's connect and create something amazing together
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="pb-20 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Contact Information -->
        <div class="contact-info space-y-8 opacity-0 translate-x-8">
          <div>
            <h2 class="text-3xl font-Orbitron font-bold text-white mb-6">
              Get in <span class="text-cyan-400">Touch</span>
            </h2>
            <p class="text-white/80 font-Inter leading-relaxed mb-8">
              I'm always excited to discuss new projects, creative ideas, or opportunities to be part of your vision. 
              Whether you're looking for a complete website redesign or need help with a specific component, 
              I'd love to hear from you.
            </p>
          </div>
          
          <!-- Contact Methods -->
          <div class="space-y-6">
            <div class="contact-method flex items-center p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-all duration-300">
              <div class="w-12 h-12 bg-gradient-to-br from-cyan-400 to-blue-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-white font-Orbitron font-bold">Email</h3>
                <a href="mailto:hello@example.com" class="text-cyan-400 font-Inter hover:text-cyan-300 transition-colors duration-300">
                  hello@example.com
                </a>
              </div>
            </div>
            
            <div class="contact-method flex items-center p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-all duration-300">
              <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-white font-Orbitron font-bold">GitHub</h3>
                <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="text-purple-400 font-Inter hover:text-purple-300 transition-colors duration-300">
                  github.com/username
                </a>
              </div>
            </div>
            
            <div class="contact-method flex items-center p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-all duration-300">
              <div class="w-12 h-12 bg-gradient-to-br from-pink-400 to-red-600 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-white font-Orbitron font-bold">LinkedIn</h3>
                <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="text-pink-400 font-Inter hover:text-pink-300 transition-colors duration-300">
                  linkedin.com/in/username
                </a>
              </div>
            </div>
          </div>

          <!-- Availability Status -->
          <div class="availability-status p-6 rounded-2xl bg-gradient-to-r from-green-500/20 to-emerald-600/20 border border-green-500/30">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-400 rounded-full mr-3 animate-pulse"></div>
              <span class="text-green-400 font-Inter font-medium">Available for new projects</span>
            </div>
            <p class="text-white/70 font-Inter text-sm mt-2">
              Currently accepting new freelance opportunities and collaborations
            </p>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="contact-form opacity-0 translate-x-8">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-white font-Inter font-medium mb-2">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all duration-300"
                placeholder="Your name"
                required
              >
            </div>
            
            <div>
              <label for="email" class="block text-white font-Inter font-medium mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all duration-300"
                placeholder="your.email@example.com"
                required
              >
            </div>
            
            <div>
              <label for="subject" class="block text-white font-Inter font-medium mb-2">Subject</label>
              <input 
                type="text" 
                id="subject" 
                name="subject" 
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all duration-300"
                placeholder="Project inquiry"
                required
              >
            </div>
            
            <div>
              <label for="message" class="block text-white font-Inter font-medium mb-2">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6"
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all duration-300 resize-none"
                placeholder="Tell me about your project..."
                required
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              class="w-full py-4 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg font-Inter font-medium text-white hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-cyan-400/50"
            >
              Send Message
            </button>
          </form>
          
          <!-- Form Response Message -->
          <div id="form-response" class="hidden mt-4 p-4 rounded-lg"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map or Additional Info Section (Optional) -->
  <section class="py-20 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <div class="location-info p-8 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10 opacity-0 translate-y-8">
        <h3 class="text-2xl font-Orbitron font-bold text-white mb-4">
          Based in <span class="text-cyan-400">Japan</span>
        </h3>
        <p class="text-white/80 font-Inter mb-6">
          Working remotely with clients worldwide. Available in JST timezone but flexible for international collaboration.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <div class="flex items-center text-white/60 font-Inter text-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            JST (UTC+9)
          </div>
          <div class="flex items-center text-white/60 font-Inter text-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Remote Worldwide
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { gsap } from 'gsap';
  
  function initContactAnimations() {
    // Set initial states
    gsap.set('.page-title', { opacity: 0, y: 60 });
    gsap.set('.page-subtitle', { opacity: 0, y: 40 });
    gsap.set('.contact-info', { opacity: 0, x: -80 });
    gsap.set('.contact-form', { opacity: 0, x: 80 });
    gsap.set('.location-info', { opacity: 0, y: 60 });
    
    // Animate page header
    const headerTl = gsap.timeline({ delay: 0.3 });
    headerTl
      .to('.page-title', {
        duration: 1,
        opacity: 1,
        y: 0,
        ease: 'power3.out'
      })
      .to('.page-subtitle', {
        duration: 0.8,
        opacity: 1,
        y: 0,
        ease: 'power3.out'
      }, '-=0.6');
    
    // Animate contact sections
    gsap.to('.contact-info', {
      scrollTrigger: {
        trigger: '.contact-info',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      },
      duration: 1,
      opacity: 1,
      x: 0,
      ease: 'power3.out'
    });
    
    gsap.to('.contact-form', {
      scrollTrigger: {
        trigger: '.contact-form',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      },
      duration: 1,
      opacity: 1,
      x: 0,
      ease: 'power3.out',
      delay: 0.2
    });
    
    gsap.to('.location-info', {
      scrollTrigger: {
        trigger: '.location-info',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      },
      duration: 0.8,
      opacity: 1,
      y: 0,
      ease: 'power3.out'
    });
    
    // Add hover animations for contact methods
    const contactMethods = document.querySelectorAll('.contact-method');
    
    contactMethods.forEach(method => {
      method.addEventListener('mouseenter', () => {
        gsap.to(method, {
          duration: 0.3,
          scale: 1.02,
          y: -5,
          ease: 'power2.out'
        });
      });
      
      method.addEventListener('mouseleave', () => {
        gsap.to(method, {
          duration: 0.3,
          scale: 1,
          y: 0,
          ease: 'power2.out'
        });
      });
    });
  }
  
  // Form handling
  function setupContactForm() {
    const form = document.querySelector('form');
    const responseDiv = document.getElementById('form-response');
    
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Get form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      
      // Show loading state
      const submitButton = form.querySelector('button[type="submit"]');
      const originalText = submitButton?.textContent;
      if (submitButton) {
        submitButton.textContent = 'Sending...';
        submitButton.disabled = true;
      }
      
      try {
        // Simulate form submission (replace with actual endpoint)
        await new Promise(resolve => setTimeout(resolve, 1000));
        
        // Show success message
        if (responseDiv) {
          responseDiv.className = 'mt-4 p-4 rounded-lg bg-green-500/20 border border-green-500/30 text-green-400';
          responseDiv.textContent = 'Message sent successfully! I\'ll get back to you soon.';
          responseDiv.classList.remove('hidden');
        }
        
        // Reset form
        form.reset();
        
      } catch (error) {
        // Show error message
        if (responseDiv) {
          responseDiv.className = 'mt-4 p-4 rounded-lg bg-red-500/20 border border-red-500/30 text-red-400';
          responseDiv.textContent = 'There was an error sending your message. Please try again.';
          responseDiv.classList.remove('hidden');
        }
      } finally {
        // Restore button
        if (submitButton && originalText) {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
        }
      }
    });
  }
  
  // Load ScrollTrigger and initialize
  import('gsap/ScrollTrigger').then((ScrollTrigger) => {
    gsap.registerPlugin(ScrollTrigger.ScrollTrigger);
    initContactAnimations();
  });
  
  // Initialize form handling
  setupContactForm();
  
  // Re-initialize after page transitions
  document.addEventListener('astro:after-swap', () => {
    import('gsap/ScrollTrigger').then((ScrollTrigger) => {
      gsap.registerPlugin(ScrollTrigger.ScrollTrigger);
      initContactAnimations();
    });
    setupContactForm();
  });
</script>
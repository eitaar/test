    </div>
  </section>

  <!-- Experience Timeline -->
  <section class="py-20 px-6">
    <div class="max-w-4xl mx-auto">
      <h2 class="section-title text-3xl md:text-4xl font-Orbitron font-bold text-center mb-16 opacity-0 translate-y-8">
        Experience
      </h2>
      
      <div class="relative">
        <!-- Timeline Line -->
        <div class="absolute left-8 top-0 bottom-0 w-px bg-gradient-to-b from-cyan-400 via-purple-500 to-pink-600"></div>
        
        <div class="space-y-12">
          <!-- Experience 1 -->
          <div class="timeline-item flex items-start opacity-0 translate-x-8">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-cyan-400 to-purple-600 rounded-full flex items-center justify-center relative z-10">
              <div class="w-8 h-8 bg-white rounded-full"></div>
            </div>
            
            <div class="ml-8">
              <div class="text-cyan-400 font-Inter text-sm mb-1">2023 - Present</div>
              <h3 class="text-xl font-Orbitron font-bold text-white mb-2">Freelance Web Designer</h3>
              <p class="text-white/70 font-Inter leading-relaxed">
                Creating modern, responsive websites and web applications for clients across various industries. 
                Specializing in user experience design and frontend development with React and Astro.
              </p>
            </div>
          </div>
          
          <!-- Experience 2 -->
          <div class="timeline-item flex items-start opacity-0 translate-x-8">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-purple-400 to-pink-600 rounded-full flex items-center justify-center relative z-10">
              <div class="w-8 h-8 bg-white rounded-full"></div>
            </div>
            
            <div class="ml-8">
              <div class="text-purple-400 font-Inter text-sm mb-1">2022 - 2023</div>
              <h3 class="text-xl font-Orbitron font-bold text-white mb-2">Frontend Developer</h3>
              <p class="text-white/70 font-Inter leading-relaxed">
                Developed user interfaces for web applications using React, TypeScript, and modern CSS frameworks. 
                Collaborated with design teams to implement pixel-perfect designs and smooth animations.
              </p>
            </div>
          </div>
          
          <!-- Experience 3 -->
          <div class="timeline-item flex items-start opacity-0 translate-x-8">
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-pink-400 to-red-600 rounded-full flex items-center justify-center relative z-10">
              <div class="w-8 h-8 bg-white rounded-full"></div>
            </div>
            
            <div class="ml-8">
              <div class="text-pink-400 font-Inter text-sm mb-1">2021 - 2022</div>
              <h3 class="text-xl font-Orbitron font-bold text-white mb-2">UI/UX Designer</h3>
              <p class="text-white/70 font-Inter leading-relaxed">
                Designed user interfaces and experiences for mobile and web applications. 
                Created wireframes, prototypes, and design systems using Figma and Adobe Creative Suite.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { gsap } from 'gsap';
  
  function initAboutAnimations() {
    // Set initial states
    gsap.set('.page-title', { opacity: 0, y: 60 });
    gsap.set('.page-subtitle', { opacity: 0, y: 40 });
    gsap.set('.profile-image', { opacity: 0, x: 80 });
    gsap.set('.bio-content', { opacity: 0, x: -80 });
    gsap.set('.section-title', { opacity: 0, y: 40 });
    gsap.set('.skill-category', { opacity: 0, y: 60 });
    gsap.set('.timeline-item', { opacity: 0, x: 80 });
    gsap.set('.skill-bar', { width: '0%' });
    
    // Animate page header
    const headerTl = gsap.timeline({ delay: 0.3 });
    headerTl
      .to('.page-title', {
        duration: 1,
        opacity: 1,
        y: 0,
        ease: 'power3.out'
      })
      .to('.page-subtitle', {
        duration: 0.8,
        opacity: 1,
        y: 0,
        ease: 'power3.out'
      }, '-=0.6');
    
    // Animate bio section
    gsap.to('.profile-image', {
      scrollTrigger: {
        trigger: '.profile-image',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      },
      duration: 1,
      opacity: 1,
      x: 0,
      ease: 'power3.out'
    });
    
    gsap.to('.bio-content', {
      scrollTrigger: {
        trigger: '.bio-content',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      },
      duration: 1,
      opacity: 1,
      x: 0,
      ease: 'power3.out',
      delay: 0.2
    });
    
    // Animate section titles
    gsap.to('.section-title', {
      scrollTrigger: {
        trigger: '.section-title',
        start: 'top 85%',
        toggleActions: 'play none none reverse'
      },
      duration: 0.8,
      opacity: 1,
      y: 0,
      ease: 'power3.out'
    });
    
    // Animate skill categories
    gsap.to('.skill-category', {
      scrollTrigger: {
        trigger: '.skill-category',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      },
      duration: 0.8,
      opacity: 1,
      y: 0,
      stagger: 0.2,
      ease: 'power3.out',
      onComplete: animateSkillBars
    });
    
    // Animate timeline items
    gsap.to('.timeline-item', {
      scrollTrigger: {
        trigger: '.timeline-item',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      },
      duration: 0.8,
      opacity: 1,
      x: 0,
      stagger: 0.2,
      ease: 'power3.out'
    });
  }
  
  function animateSkillBars() {
    const skillBars = document.querySelectorAll('.skill-bar');
    
    skillBars.forEach(bar => {
      const targetWidth = bar.getAttribute('data-width') + '%';
      gsap.to(bar, {
        duration: 1.5,
        width: targetWidth,
        ease: 'power2.out',
        delay: Math.random() * 0.5
      });
    });
  }
  
  // Load ScrollTrigger and initialize
  import('gsap/ScrollTrigger').then((ScrollTrigger) => {
    gsap.registerPlugin(ScrollTrigger.ScrollTrigger);
    initAboutAnimations();
  });
  
  // Re-initialize after page transitions
  document.addEventListener('astro:after-swap', () => {
    import('gsap/ScrollTrigger').then((ScrollTrigger) => {
      gsap.registerPlugin(ScrollTrigger.ScrollTrigger);
      initAboutAnimations();
    });
  });
</script>
